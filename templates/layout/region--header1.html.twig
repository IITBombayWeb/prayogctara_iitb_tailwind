{% set tailwindClasses = [
  'mx-auto', 
  'pryg-container'  
] 
%}
{% set url = url('<current>') %}

{% if content %}
  {% if '/' in url|render|render %}
  <header class="h-screen bg-hero-pattern bg-cover relative">
    <div{{ attributes.addClass(tailwindClasses) }}>
      <div class="flex px-8 justify-between py-16">
        {{ content }}
      </div>
    </div>
    <div class="w-2/4 text-pryg-white-v1 absolute top-1/3 left-1/2 lg:pr-32 xl:pr-48 2xl:pr-52 rounded-lg">
      <div class="lg:text-3xl 2xl:text-6xl font-bold">Transforming lives through Technology</div>
      <div class="lg:text-sm xl:text-lg 2xl:text-3xl lg:py-10">
          To build transformational delivery targeted at
          providing solutions for the countryâ€™s development.
      </div>
      <div>
          <a class="pryg-btn hover:bg-pryg-blue-v1  text-pryg-white-v1 bg-pryg-yellow" href="">Find Solutions</a>
      </div>
    </div>
  </header>
  {% else %}

        {{ content }}
  {% endif %}
{% endif %}
